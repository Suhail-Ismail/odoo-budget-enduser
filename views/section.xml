<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <!--START FORM VIEW-->
        <record model="ir.ui.view" id="view_form_section">
            <field name="name">Section</field>
            <field name="model">budget.enduser.section</field>
            <field name="arch" type="xml">
                <form string="Section">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object"
                                    name="toggle_active" icon="fa-archive">
                                <field name="active" widget="boolean_button"
                                       options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <group groups="base.group_no_one">
                                <field name="partner_id" readonly="1" required="0"
                                       attrs="{'invisible': [('id', '=', False)]}"/>
                            </group>
                            <h1>
                                <field name="name" required="1" default_focus="1" placeholder="Section"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="alias" required="1"/>
                                <field name="division_id" required="1" options="{'no_create': True, 'no_open': True}"/>
                            </group>
                            <group>
                            </group>
                        </group>
                        <group>
                            <field name="remark"/>
                        </group>
                        <notebook colspan="4">
                            <page string="Sections">
                                <field name="sub_section_ids" readonly="1"/>
                            </page>
                        </notebook>

                    </sheet>
                </form>
            </field>
        </record>
        <!--END FORM VIEW-->

        <!--START TREE VIEW-->
        <record model="ir.ui.view" id="view_tree_section">
            <field name="name">Section</field>
            <field name="model">budget.enduser.section</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="division_id"/>
                    <field name="alias"/>
                </tree>
            </field>
        </record>
        <!--END TREE VIEW-->

        <!--START ACTION-->
        <record model="ir.actions.act_window" id="action_section">
            <field name="name">Section</field>
            <field name="res_model">budget.enduser.section</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,pivot</field>
            <field name="view_id" ref="view_tree_section"/>
            <field name="domain"></field>
            <field name="context">{'form_view_ref': 'budget_enduser.view_form_section'}</field>
        </record>
        <!--END ACTION-->
    </data>
</odoo>