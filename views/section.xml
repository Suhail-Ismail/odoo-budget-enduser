<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>
        <!--START FORM VIEW-->
        <record model="ir.ui.view" id="view_form_section">
            <field name="name">Section</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <form string="Section">
                    <header>
                    <button
                        string="Set to Inactive"
                        name="set2inactive"
                        type="object"
                        states="active" />
                    <button
                        string="Set to Active"
                        name="set2active"
                        type="object"
                        states="inactive" />
                    <field name="state" widget="statusbar"/>
                </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                        </div>
                        <div class="oe_title">
                            <h1>
                                <group groups="base.group_system">
                                    <field name="is_budget_section"/>
                                </group>
                                <field name="name" required="1" default_focus="1" placeholder="Section"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="alias" required="1"/>
                            </group>
                            <group>
                            </group>
                        </group>
                        <group>
                            <field name="note"/>
                        </group>
                        <notebook colspan="4">
                            <page string="Sub Sections">
                                <field name="sub_section_ids"
                                       context="{'form_view_ref': 'budget_enduser.view_form_sub_section',
                                                 'tree_view_ref': 'budget_enduser.view_tree_sub_section',
                                                 'default_is_budget_sub_section': True}"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!--END FORM VIEW-->

        <!--START TREE VIEW-->
        <record model="ir.ui.view" id="view_tree_section">
            <field name="name">Section</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="alias"/>
                    <field name="state"/>
                </tree>
             </field>
        </record>
        <!--END TREE VIEW-->

        <!--START ACTION-->
        <record model="ir.actions.act_window" id="action_section">
            <field name="name">Section</field>
            <field name="res_model">res.partner</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,pivot</field>
            <field name="view_id" ref="view_tree_section"/>
            <field name="domain">[('is_budget_section','=',True)]</field>
            <field name="context">{'form_view_ref': 'budget_enduser.view_form_section',
                                   'default_is_budget_section': True}</field>
        </record>
        <!--END ACTION-->
    </data>
</openerp>